<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:buttonStyle">?android:attr/borderlessButtonStyle</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="AppDialogTheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:tint">@color/colorAccent</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:textColorPrimary">@color/dark</item>
        <item name="android:windowBackground">@drawable/date_dialog_bg</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="PopupAnimation"></style>

    <style name="PopupAnimation.Bottom">
        <item name="android:windowEnterAnimation">@anim/popup_show_bottom</item>
        <item name="android:windowExitAnimation">@anim/popup_hide_bottom</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
