<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
  <data>
    <import type="demo.paritycube.com.deals.util.TypefaceFactory"/>
  </data>
  <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                               android:layout_width="match_parent"
                                               android:layout_height="match_parent"
      android:background="@color/colorPrimary">
    <EditText android:id="@+id/email_edit_text"
              android:layout_width="290dp"
              android:layout_height="48dp"
              android:layout_marginTop="180dp"
              android:background="@drawable/field_top_bg"
              android:drawableLeft="@drawable/ic_email"
              android:drawablePadding="14dp"
              android:hint="@string/login_email"
              android:inputType="text|textEmailAddress"
              android:maxLines="1"
              android:paddingLeft="14dp"
              android:paddingRight="14dp"
              android:textColor="@color/white"
              android:textColorHint="@color/hintLight"
              android:textSize="16dp"
              android:typeface="@{TypefaceFactory.getTypeFaceForId(context, TypefaceFactory.RobotoRegular)}"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintRight_toRightOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              tools:ignore="RtlHardcoded,SpUsage"/>
    <EditText android:id="@+id/password_edit_text"
              android:layout_width="290dp"
              android:layout_height="48dp"
              android:background="@drawable/field_bottom_bg"
              android:drawableLeft="@drawable/ic_password"
              android:drawablePadding="14dp"
              android:hint="@string/login_password"
              android:inputType="textPassword"
              android:maxLines="1"
              android:paddingLeft="14dp"
              android:paddingRight="14dp"
              android:textColor="@color/white"
              android:textColorHint="@color/hintLight"
              android:textSize="16dp"
              android:typeface="@{TypefaceFactory.getTypeFaceForId(context, TypefaceFactory.RobotoRegular)}"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintRight_toRightOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/email_edit_text"
              tools:ignore="RtlHardcoded,SpUsage"/>
    <View android:layout_width="290dp"
          android:layout_height="1px"
          android:background="#4Dffffff"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintTop_toBottomOf="@id/email_edit_text"/>
    <Button android:id="@+id/login_button"
            android:layout_width="290dp"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:text="@string/login"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:typeface="@{TypefaceFactory.getTypeFaceForId(context, TypefaceFactory.RobotoMedium)}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/password_edit_text"
            tools:background="@drawable/field_single_bg"/>
    <TextView android:id="@+id/remember_password_text_view"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="32dp"
              android:text="@string/login_remember_password"
              android:textColor="@color/white"
              android:textSize="14dp"
              android:typeface="@{TypefaceFactory.getTypeFaceForId(context, TypefaceFactory.RobotoRegular)}"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintRight_toRightOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/login_button"
              tools:ignore="SpUsage"/>
    <CheckBox android:id="@+id/remember_password_check_box"
              android:layout_width="25dp"
              android:layout_height="25dp"
              android:layout_marginTop="8dp"
              android:background="@null"
              android:button="@drawable/checkbox"
              android:checked="false"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintRight_toRightOf="parent"
              app:layout_constraintTop_toBottomOf="@id/remember_password_text_view"/>
    <TextView android:id="@+id/or_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:text="@string/or"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:typeface="@{TypefaceFactory.getTypeFaceForId(context, TypefaceFactory.RobotoBold)}"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/remember_password_check_box"
        tools:ignore="SpUsage"/>
    <com.facebook.login.widget.LoginButton android:id="@+id/fblogin_button"
        android:layout_width="290dp"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/or_label"
        tools:background="@drawable/field_single_bg"/>
  </android.support.constraint.ConstraintLayout>
</layout>